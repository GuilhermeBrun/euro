{
  "name": "euro",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": " npm run services:up && npm run wait-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations  create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-postgres": "node infra/scripts/wait-postgres.js"
  },
  "author": "Guilherme Brun Moraes",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "next": "^14.2.5",
    "node-pg-migrate": "^7.7.1",
    "pg": "^8.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.2"
  }
}
